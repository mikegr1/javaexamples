    private void jButton21ActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        //button delete
        String newStr;
        int len = jTextField1.getText().length();
        int newLen = jTextField1.getText().length() - 1;

        if(len > 0){
            StringBuilder del = new StringBuilder(jTextField1.getText());
            del.deleteCharAt(newLen);
            newStr = del.toString();
            jTextField1.setText(newStr);
        }
    }


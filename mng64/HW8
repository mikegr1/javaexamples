    //this is the function that carries out the mathematical operations
    int mathCase;
    double curNum;
    double answer;
    public void doMath(){

        switch(mathCase){

            case 1:
                //this does addition
                answer = curNum + Double.parseDouble(jTextField1.getText());
                jTextField1.setText(Double.toString(answer));
                break;

            case 2:
                //this does subtraction
                answer = curNum - Double.parseDouble(jTextField1.getText());
                jTextField1.setText(Double.toString(answer));
                break;

            case 3:
                //this does multiplication
                answer = curNum * Double.parseDouble(jTextField1.getText());
                jTextField1.setText(Double.toString(answer));
                break;

            case 4:
                //this does division
                answer = curNum / Double.parseDouble(jTextField1.getText());
                jTextField1.setText(Double.toString(answer));
                break;

            case 5:
                //this does X^2
                answer = curNum * curNum;
                jTextField1.setText(Double.toString(answer));
                break;

            case 6:
                //this does square root
                answer = Math.sqrt(curNum);
                jTextField1.setText(Double.toString(answer));
                break;

            case 7:
                //this does 1/X
                answer = Math.pow(curNum, -1);
                jTextField1.setText(Double.toString(answer));
                break;
        }
    }

